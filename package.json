{
    "name": "ngpoint",
    "version": "1.2.0",
    "author": "Ali Parlakci <ali.parlakci@piworks.net>",
    "license": "MIT",
    "keywords": [
        "carousel",
        "angularjs",
        "node"
    ],
    "description": "An AngularJS carousel component for HTML content",
    "private": false,
    "main": "index.js",
    "files": [
        "/src"
    ],
    "scripts": {
        "prestart": "npm install",
        "start": "webpack-dev-server --open --mode development",
        "build": "webpack --mode production",
        "build:dev": "webpack --mode development",
        "pretest": "npm install",
        "test:dev": "karma start --browsers ChromeDebugging --colors true --autoWatch true --singleRun false",
        "test": "karma start --browsers ChromeHeadless --colors true --autoWatch false --singleRun true",
        "preupdate-webdriver": "npm install",
        "update-webdriver": "webdriver-manager update --gecko=false",
        "pree2e": "npm run update-webdriver",
        "e2e": "protractor e2e-tests/protractor.conf.js"
    },
    "dependencies": {
        "angular": "1.8.0",
        "bootstrap": "^4.5.0",
        "jquery": "^3.5.1",
        "popper.js": "^1.16.1"
    },
    "devDependencies": {
        "@babel/core": "^7.10.5",
        "@babel/preset-env": "^7.10.4",
        "@semantic-release/commit-analyzer": "^8.0.1",
        "@semantic-release/git": "^9.0.0",
        "@semantic-release/gitlab": "^6.0.4",
        "@semantic-release/npm": "^7.0.5",
        "angular-mocks": "1.8.0",
        "babel-eslint": "^10.1.0",
        "babel-loader": "^8.1.0",
        "babel-plugin-angularjs-annotate": "^0.10.0",
        "commitizen": "^4.1.2",
        "css-loader": "^4.x.0",
        "cz-conventional-changelog": "^3.2.0",
        "eslint": "^7.5.0",
        "eslint-config-airbnb-base": "^14.2.0",
        "eslint-plugin-import": "^2.22.0",
        "html-loader": "^1.1.0",
        "html-webpack-plugin": "^4.3.0",
        "http-server": "^0.11.1",
        "jasmine-core": "^3.5.0",
        "karma": "^3.1.4",
        "karma-chrome-launcher": "^2.2.0",
        "karma-firefox-launcher": "^1.3.0",
        "karma-jasmine": "^1.1.2",
        "karma-webpack": "^4.0.2",
        "protractor": "^5.4.4",
        "rimraf": "^3.0.2",
        "style-loader": "^1.2.1",
        "webpack": "^4.44.0",
        "webpack-cli": "^3.3.12",
        "webpack-dev-server": "^3.11.0"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
